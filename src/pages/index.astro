<style>
	body {
		background-image: url("/background.png");
	}
	main {
		background-color: transparent;
		padding: 0;
	}
	.container {
		border-radius: 15px;
		padding: 30px;
		position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
		background-color: rgba(0, 0, 0, 0.253);
		width: 400px;
	}
	ul {
		margin: 0;
		padding: 0;
	}
	li {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	h1 {
		display: block;
		text-align: center;
		font-size: 3rem;
		background: rgb(0,102,0);
		background: linear-gradient(90deg, rgba(0,102,0,1) 20%, rgba(255,255,0,1) 42%, rgba(255,0,0,1) 64%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	svg {
		width: 12vw;
		max-width: 40px;
		transition: all 0.15s ease;
	}
	svg:hover {
		opacity: .9;
		transform: scale(1.15);
	}
	.link-list {
		display: flex;
		justify-content: center;
	}
	.link-list li {
		margin: 0 10px;
	}
	.link-list li:first-of-type {
		margin-left: 0;
	}

	@media (min-width: 1300px) {
		.container {
			transform: translate(-50%, -50%) scale(1.2);
		}
	}

	@media (max-width: 500px) {
		.container {
			transform: translate(-50%, -50%) scale(0.9);
		}
		p {
			font-size: 1.1rem;
		}
	}

	@media (max-width: 450px) {
		.container {
			transform: translate(-50%, -50%) scale(0.82);
		}
		p {
			font-size: 1.1rem;
		}
	}

	@media (max-width: 420px) {
		.container {
			left: 41%;
			top: 45%;
			transform: scale(.85) translate(-50%, -50%);
			width: 100%;
			margin: 0 auto; 
		}
		p {
			font-size: 1.1rem;
		}
	}
</style>
---
export interface Props {
	title: string;
	img: string;
	href: string;
}

const { title, img, href } = Astro.props;
---

<a class="game-card" href={href}>
  <h2>
    {title}
  </h2>
  <img src={img}/>
</a>

<style>
  .game-card {
    text-decoration: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
    justify-content:  space-between;
    width: 100%;
    height: 145px;
    transition: 0.2s ease-in-out;
    overflow: hidden;
  }
  .game-card:hover {
    background-color: rgba(255, 255, 255, 0.05);
    box-shadow: 5px 5px #ccc;
  }
  h2 {
    margin: 0;
    padding: 1rem;
    color: white;
  }
  .game-card img {
    height: 100%;
    object-fit: cover;
  }
</style>
